<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{mm:ss.SSS} %-2level %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="fr.rossi.belote" level="DEBUG"/>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>